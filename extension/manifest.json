{
  "manifest_version": 3,
  "name": "e-Courts Captcha Solver",
  "version": "1.0",
  "description": "Automatically solves and fills captchas on judgments.ecourts.gov.in.",

  "permissions": ["storage"],

  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "https://judgments.ecourts.gov.in/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://judgments.ecourts.gov.in/pdfsearch/index.php*"],
      "js": ["content.js"]
    }
  ]
}
